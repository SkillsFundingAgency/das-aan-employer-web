@using SFA.DAS.ApprenticeAan.Domain.Constants
@{
    var eventFormats = Model.EventFilterChoices.EventFormats as List<EventFormat>;

    var eventFormatOnlineChecked = "";
    var eventFormatInPersonChecked = "";
    var eventFormatHybridChecked = "";
    if (Model.EventFilterChoices.EventFormats != null && eventFormats!.Any(x => x == EventFormat.InPerson))
    {
        eventFormatInPersonChecked = "checked='checked'";
    }

    if (Model.EventFilterChoices.EventFormats != null && eventFormats!.Any(x => x == EventFormat.Online))
    {
        eventFormatOnlineChecked = "checked='checked'";
    }

    if (Model.EventFilterChoices.EventFormats != null && eventFormats!.Any(x => x == EventFormat.Hybrid))
    {
        eventFormatHybridChecked = "checked='checked'";
    }
}
<div class="govuk-form-group">
    <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
            Event format
        </legend>
        <div class="govuk-checkboxes govuk-checkboxes--small">
            <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="format-person" name="eventFormat" type="checkbox" value="InPerson" @eventFormatInPersonChecked>
                <label class="govuk-label govuk-checkboxes__label" for="format-person">
                    In person
                </label>
            </div>
            <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="format-online" name="eventFormat" type="checkbox" value="Online" @eventFormatOnlineChecked>
                <label class="govuk-label govuk-checkboxes__label" for="format-online">
                    Online
                </label>
            </div>
            <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="format-hybrid" name="eventFormat" type="checkbox" value="Hybrid" @eventFormatHybridChecked>
                <label class="govuk-label govuk-checkboxes__label" for="format-hybrid">
                    Hybrid
                </label>
            </div>
        </div>
    </fieldset>
</div>