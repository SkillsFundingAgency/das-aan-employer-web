@using SFA.DAS.ApprenticeAan.Web.Infrastructure
@using SFA.DAS.ApprenticeAan.Web.Models.Onboarding
@model PreviousEngagementViewModel
@{
    ViewData["Title"] = "Previous Engagement";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_validationSummary" />
        <form method="post" asp-route=" @RouteNames.Onboarding.PreviousEngagement" enctype="multipart/form-data" novalidate>
            <div esfa-validation-marker-for="HasPreviousEngagement" class="govuk-form-group">
                <h1 class="govuk-heading-l">
                    Did you previously engage with an ambassador before deciding to join the network?
                </h1>
                <div class="govuk-hint">This could have been at a face-to-face or online event, on social media, through a training provider or talking to a current ambassador where you work.</div>
                <span asp-validation-for="HasPreviousEngagement" class="govuk-error-message"></span>
                <div id="EngagedWithAPreviousAmbassadorInTheNetwork" class="govuk-radios" data-module="govuk-radios">
                    <div class="govuk-radios__item">
                        <input asp-for="HasPreviousEngagement" id="Yes" class="govuk-radios__input" type="radio" value="true"
                               sfa-validationerror-class="form-control-error">
                        <label class="govuk-label govuk-radios__label" for="Yes">
                            Yes
                        </label>
                    </div>
                    <div class="govuk-radios__item">
                        <input asp-for="HasPreviousEngagement" id="No" class="govuk-radios__input" type="radio" value="false"
                               sfa-validationerror-class="form-control-error">
                        <label class="govuk-label govuk-radios__label" for="No">
                            No
                        </label>
                    </div>
                </div>
            </div>
            <div class="govuk-button-group">
                <button id="continue" type="submit" class="govuk-button" data-module="govuk-button" data-disable-on-submit="true">
                    Continue
                </button>
            </div>
        </form>
    </div>
</div>