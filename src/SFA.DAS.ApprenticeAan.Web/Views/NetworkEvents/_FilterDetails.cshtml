@using SFA.DAS.ApprenticeAan.Web.Models.NetworkEvents
@model SFA.DAS.ApprenticeAan.Web.Models.NetworkEvents.ChecklistDetails

<div class="govuk-form-group">
    <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
            @Model.Title
        </legend>
        <div class="govuk-checkboxes govuk-checkboxes--small">
            @foreach (var lookup in Model.Lookups)
            {
                <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="type-employer" name="@Model.QueryStringParameterName" type="checkbox" value="@lookup.Value"
                       @lookup.Checked >
                    <label class="govuk-label govuk-checkboxes__label" for="type-employer">
                        @lookup.Name
                    </label>
                </div>
            }
        </div>
    </fieldset>
</div>