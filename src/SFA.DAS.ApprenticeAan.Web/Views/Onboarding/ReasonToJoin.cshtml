@model ReasonToJoinViewModel
@{
    ViewData["Title"] = "Why do you want to join the network?";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_validationSummary" />
        <form method="post" asp-route=" @RouteNames.Onboarding.ReasonToJoin" enctype="multipart/form-data" novalidate>
            <div esfa-validation-marker-for="ReasonForJoiningTheNetwork" class="govuk-form-group">
                <h1 class="govuk-label-wrapper">
                    <span class="govuk-caption-l govuk-!-margin-bottom-0">Create your ambassador profile</span>
                    <label class="govuk-label govuk-label--l" sp-for="ReasonForJoiningTheNetwork">
                        Why do you want to join the network?
                    </label>
                </h1>
                <p class="govuk-body">
                    We’ll show this on your profile to help others understand what you want to get out of the network.
                </p>
                <div class="govuk-character-count" data-module="govuk-character-count" data-maxwords="@Model.MaxWordCount">
                    <span asp-validation-for="ReasonForJoiningTheNetwork" class="govuk-error-message"></span>
                    <label class="govuk-visually-hidden" asp-for="ReasonForJoiningTheNetwork">
                        Reasons for joining the network
                    </label>
                    <textarea class="govuk-textarea govuk-js-character-count" asp-for="ReasonForJoiningTheNetwork" id="ReasonForJoiningTheNetwork" rows="12" aria-describedby="join-the-network-hint"
                              sfa-validationerror-class="form-control-error">@Model.ReasonForJoiningTheNetwork</textarea>
                    <span id="ReasonForJoiningTheNetwork-info" class="govuk-hint govuk-character-count__message" aria-live="polite">
                        You have 250 words remaining
                    </span>
                </div>
            </div>
            <div class="govuk-button-group">
                <button id="continue" type="submit" class="govuk-button" data-module="govuk-button" data-disable-on-submit="true">
                    Continue
                </button>
            </div>
        </form>
    </div>
</div>