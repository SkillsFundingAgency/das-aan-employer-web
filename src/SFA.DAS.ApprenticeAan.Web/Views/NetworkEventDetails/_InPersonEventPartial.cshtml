@using Microsoft.AspNetCore.Mvc.ModelBinding;
@using SFA.DAS.ApprenticeAan.Web.Models.NetworkEvents;
@using SFA.DAS.ApprenticeAan.Web.UrlHelpers;

@model NetworkEventDetailsViewModel

    <h2 class="govuk-heading-m">When and where</h2>
    <p><b>Date and Time:</b> @Model.StartDate @Model.StartTime to @Model.EndTime</p>
    <p>
        <b>In person:</b> @Model.LocationDetails?.Location, <span class="das-no-wrap">@Model.LocationDetails?.Postcode</span>
        <br /><a href="https://www.google.com/maps/dir//@Model.LocationDetails?.Location+@Model.LocationDetails?.Postcode" rel="noopener" target="_blank" class="govuk-link">Find the location on google maps (opens in a new window)</a>
    </p>
