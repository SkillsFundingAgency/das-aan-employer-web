@model EventsHubViewModel
@{
    ViewData["Title"] = "Events hub";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Events hub</h1>
        <p>Discover upcoming events more relevant to you, events happening across the wider network and stay up to date with the events you have signed up for.</p>
        <div>
            <ul class="govuk-list app-icon-list">
                <li>
                    <h2 class="govuk-heading-m">
                      <a href="@Model.AllNetworksUrl" class="govuk-link govuk-link--no-visited-state"> All network events</a>
                    </h2>

                    <p>Search all events happening across the network.</p>
                    <svg class="app-icon-list__icon"><use href="/img/sprite.svg#icon-calendar" /></svg>
                </li>
            </ul>
        </div>

        <div>
            <partial name="_Calendar" model="@Model.Calendar" />
        </div>
    </div>
</div>
