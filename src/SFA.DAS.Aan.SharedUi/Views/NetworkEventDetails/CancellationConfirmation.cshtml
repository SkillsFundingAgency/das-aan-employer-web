@using SFA.DAS.Aan.SharedUi.Models;
@using SFA.DAS.Aan.SharedUi.Infrastructure;

@{
    ViewData["Title"] = $"Confirmation Page — Cancel attendance";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">
                You have successfully cancelled your attendance at this event
            </h1>
        </div>

        <h2 class="govuk-heading-m">What happens next</h2>

        <p class="govuk-body">
            You have successfully cancelled your attendance at this event and it has been removed from your network profile calendar.
            <a href="@Url.RouteUrl(SharedRouteNames.NetworkEvents)"> Find more information on upcoming network events that may suit your preferences.</a>
        </p>

        <ul class="govuk-list app-icon-list">
            <li>
                <h2 class="govuk-heading-m"><a href="@Url.RouteUrl(SharedRouteNames.EventsHub)" class="govuk-link govuk-link--no-visited-state">Events hub</a></h2>
                <p>Discover suitable events, manage your upcoming events and give feedback about events you have attended.</p>
                <svg class="app-icon-list__icon"><use href="/img/sprite.svg#icon-calendar" /></svg>
            </li>
        </ul>
    </div>
</div>

