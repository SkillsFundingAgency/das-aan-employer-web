@model EmployerSearchViewModel
@{
    ViewData["Title"] = "Who do you work for?";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_validationSummary" />
        <form method="post" asp-route="@RouteNames.Onboarding.EmployerSearch" enctype="multipart/form-data" novalidate>

            <input asp-for="OrganisationName" id="OrganisationName" type="hidden" />
            <input asp-for="AddressLine1" id="AddressLine1" type="hidden" />
            <input asp-for="AddressLine2" id="AddressLine2" type="hidden" />
            <input asp-for="Town" id="Town" type="hidden" />
            <input asp-for="County" id="County" type="hidden" />
            <input asp-for="Postcode" id="Postcode" type="hidden" />
            <input asp-for="Longitude" id="Longitude" type="hidden" />
            <input asp-for="Latitude" id="Latitude" type="hidden" />

            <div esfa-validation-marker-for="SearchTerm" class="govuk-form-group">
                <span class="govuk-caption-l govuk-!-margin-bottom-0">Create your ambassador profile</span>
                <h1 class="govuk-heading-l">Who do you work for?</h1>
                <p class="govuk-body">
                    We’ll use your answer to show other ambassadors where you work.
                </p>
                <div class="govuk-label govuk-!-font-weight-bold govuk-!-margin-bottom-0">
                    Employer name or address
                </div>
                <span class="govuk-caption-m govuk-!-margin-bottom-4">Enter the employer or their postcode</span>
                <span asp-validation-for="SearchTerm" class="govuk-error-message"></span>
                <label class="govuk-visually-hidden" asp-for="SearchTerm">
                    Search Term
                </label>
                <div data-module="govuk-input">
                    <input id="SearchTerm" type="text" asp-for="SearchTerm" class="govuk-input" sfa-validationerror-class="form-control-error" maxlength="200" data-module="autoComplete" />
                </div>
            </div>
            <p>
                <a class="govuk-link" href="@Model.ManualEntryLink">Enter address manually</a>
            </p>
            <div class="govuk-button-group">
                <button id="continue" type="submit" class="govuk-button" data-module="govuk-button" data-disable-on-submit="true">
                    Continue
                </button>
            </div>
        </form>
    </div>
</div>