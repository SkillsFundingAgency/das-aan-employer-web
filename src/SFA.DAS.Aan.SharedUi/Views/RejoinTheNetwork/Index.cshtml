@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Rejoining the network";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form method="post">
            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <div class="govuk-form-group">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                            <h1 class="govuk-fieldset__heading">
                                Would you like to rejoin the network?
                            </h1>
                        </legend>
                        <p />
                        <p id="leaving-hint" class="govuk-body">
                            You can restore your membership within 14 days of leaving the network. You won't have to apply again.
                        </p>
                        <p />
                    </div>
                    <hr />
                </fieldset>
                <p />
                <div class="govuk-button-group">
                    <button id="continue-button" type="submit" class="govuk-button" data-module="govuk-button" data-disable-on-submit="true">
                        Restore membership
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
